@{
	ViewBag.Title = "COMP4203 Group Project";
}

<!DOCTYPE html>
<html ng-app="app" ng-controller="indexController">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
</head>
<body class="view-wrapper">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#!/home">COMP4203 Group Project</a>
				<p class="navbar-text navbar-right">Demonstrated & Developed in 2018 by James Tyler, Imdad Ali and Bradley Koon</p>
			</div>
		</div>
	</nav>
	<div class="main">
		<uib-tabset active="active">
			@{
				var tabIndex = 0;
			}
			<uib-tab index="@tabIndex">
				<uib-tab-heading>
					<i class="glyphicon glyphicon-play-circle"></i> Session @tabIndex
				</uib-tab-heading>
				<div>
					<div class="panel panel-info">
						<div class="panel-heading text-center">Session</div>
						<div class="session-container">
							<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
								<div class="panel panel-primary">
									<div class="panel-heading text-center">Graphical Representation</div>
									<div class="session-graphics-container">
										<canvas id="canvas_@tabIndex" width="500" height="500">
											Your browser does not support the canvas element.
										</canvas>
									</div>
								</div>
							</div>
							<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
								<div class="panel panel-success">
									<div class="panel-heading text-center">Modifications</div>
									<div class="session-modifications-container">
										<div class="input-group">
											<span class="input-group-addon" id="basic-addon_@tabIndex">Node #</span>
											<input ng-model="nodeNumber" type="number" class="form-control" placeholder="Node No." aria-describedby="basic-addon_@tabIndex">
										</div>
										<div class="input-group">
											<span class="input-group-addon" id="basic-addon_@tabIndex">Message #</span>
											<input ng-model="messageNumber" type="number" class="form-control" placeholder="Message No." aria-describedby="basic-addon_@tabIndex">
										</div>
										<div class="input-group">
											<span class="input-group-addon" id="basic-addon_@tabIndex">Sim Speed Between Each Event (ms)</span>
											<input ng-model="simSpeedNumber" type="number" class="form-control" placeholder="Sim Speed No." aria-describedby="basic-addon_@tabIndex">
										</div>
										<div class="btn-group" role="group">
											<button type="button" class="btn btn-primary" ng-click="initiateRun(@tabIndex);">RUN</button>
											<button type="button" class="btn btn-danger" ng-click="reset(@tabIndex);">RESET</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</uib-tab>
			@{
				tabIndex = 1;
			}
			<uib-tab index="@tabIndex">
