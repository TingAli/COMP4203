											<input ng-model="runData.nodeRange" type="number" class="form-control" placeholder="Node Range #">
										</div>
										<div class="btn-group" role="group">
											<button type="button" class="btn btn-primary" ng-click="initiateRun(@tabIndex);">RUN</button>
											<button type="button" class="btn btn-danger" ng-click="reset(@tabIndex);">RESET</button>
											<button type="button" class="btn btn-info" ng-click="runDemo(@tabIndex);">DEMO</button>
											<button type="button" class="btn btn-warning" ng-click="runTest(@tabIndex);">TEST</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</uib-tab>
			@{
				tabIndex = 2;
			}
			<uib-tab index="@tabIndex">
				<uib-tab-heading>
					<i class="glyphicon glyphicon-play-circle"></i> SA-DSR [Modified] Session
				</uib-tab-heading>
				<div>
					<div class="panel panel-info">
						<div class="panel-heading text-center">Session</div>
						<div class="session-container">
							<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
								<div class="panel panel-primary">
									<div class="panel-heading text-center">Graphical Representation</div>
									<div class="session-graphics-container">
										<canvas id="canvas_@tabIndex" width="500" height="500">
											Your browser does not support the canvas element.
										</canvas>
									</div>
								</div>
							</div>
							<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
								<div class="panel panel-success">
									<div class="panel-heading text-center">Modifications</div>
									<div class="session-modifications-container">
										<div class="input-group">
