										</div>
										<div class="input-group">
											<span class="input-group-addon">Event Sim Speed (ms)</span>
											<input ng-model="runData.simSpeedNumber" type="number" class="form-control" placeholder="Event Sim Speed #">
										</div>
										<div class="input-group">
											<span class="input-group-addon">Node Range # (px)</span>
											<input ng-model="runData.nodeRange" type="number" class="form-control" placeholder="Node Range #">
										</div>
										<div class="btn-group" role="group">
											<button type="button" class="btn btn-primary" ng-click="initiateRun(@tabIndex);">RUN</button>
											<button type="button" class="btn btn-danger" ng-click="reset(@tabIndex);">RESET</button>
											<button type="button" class="btn btn-info" ng-click="runDemo(@tabIndex);">DEMO</button>
											<button type="button" class="btn btn-warning" ng-click="runTest(@tabIndex);">TEST</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</uib-tab>
			@{
				tabIndex = 3;
			}
			<uib-tab index="@tabIndex">
				<uib-tab-heading>
					<i class="glyphicon glyphicon-link"></i> Graphs
				</uib-tab-heading>
				<div>
					<div class="panel panel-info">
						<div class="panel-heading text-center">Graphs</div>
						<div>

						</div>
					</div>
				</div>
			</uib-tab>
			@{
				tabIndex = 4;
			}
			<uib-tab index="@tabIndex">
				<uib-tab-heading>
					<i class="glyphicon glyphicon-screenshot"></i> Output
				</uib-tab-heading>
				<div>
					<div class="panel panel-danger">
						<div class="panel-heading text-center">Output Messages</div>
						<ul class="list-group">
							<li class="list-group-item" ng-show="outputMessages.length == 0">No output messages...</li>
							<li class="list-group-item" ng-show="outputMessages.length == 0">You can open this tab in a new browser window/tab.</li>
							<li class="list-group-item" ng-repeat="outputMessage in outputMessages"><b>{{ outputMessage.Tag }}</b> : {{ outputMessage.Message }}</li>
						</ul>
					</div>
				</div>
			</uib-tab>
		</uib-tabset>
	</div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/modernizr")
<script src="~/signalr/hubs"></script>
@Scripts.Render("~/Scripts/angularjs")
@Scripts.Render("~/bundles/ui-bootstrap")
@Scripts.Render("~/bundles/highcharts")
@Scripts.Render("~/bundles/highcharts-ng")

@Styles.Render("~/Content/css")
</html>